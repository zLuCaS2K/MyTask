<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurpleDark</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
        <item name="colorAccent">@color/colorPinkLight</item>
    </style>

    <style name="AppThemeScreens" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurpleDark</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
        <item name="colorAccent">@color/colorPinkLight</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPurpleDark</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="EditTextLogin" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/model_editext_input</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="ButtonLoginPink" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/model_button_register</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonLoginWhite" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/model_button_enter</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="fontFamily">@font/lobster</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
